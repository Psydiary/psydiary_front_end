<h1>Journey Log</h1>

<h1 class="text-center">✨Track Something Amazing✨</h3>
    <div class="row justify-content-center align-items-center">
      <div class="col-md-4 text-center">
        <button type="button" class="btn btn-dark btn-center btn-md" href=<%=new_user_daily_log_entry_path(@facade.user.id)%>>🌅 Track Your Day</button>
      </div>
    </div>

    <br>
   
   <div class="row justify-content-center align-items-center">
      <div class="col-md-4 text-center">
        <button type="button" class="btn btn-dark btn-center btn-md" href=<%=new_user_microdose_log_entry_path(@facade.user.id)%>>🍄 Track a Microdose</button>
      </div>
    </div>

<div id="3-recent-entries" class="mx-auto" style="width: 600px;">
      <h1 class="text-center">✒️Here Are Your Entries🖋</h3>
      <br>
<% n = 0 %>
<% @facade.entries.each do |entry| %>
  <% if entry.class == DailyLogEntry %>
    <div id="entry-<%=n += 1 %>">
      <h5>Date: <%= entry.format_date %></h5>
      <h5>Type: Daily Log Entry</h5>
      <%= link_to "Details", user_daily_log_entry_path(@facade.user.id, entry.id) %>
    </div>
  <% else %>
    <div id="entry-<%=n += 1 %>">
      <h5>Date: <%=entry.format_date %></h5>
      <h5>Type: Microdose Log Entry</h5>
      <%= link_to "Details", user_microdose_log_entry_path(@facade.user.id, entry.id) %>
    </div>
  <% end %>
<% end %>
</div>