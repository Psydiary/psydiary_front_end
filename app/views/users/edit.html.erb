<body>
  <header>
    <h1>User Settings</h2>
  </header>
  <section id="profile_edit">
    <% form_with model: @user, local: true do |f| %>
      <%= f.label :username, "Username" %>
      <%= f.text_field :username %><br>
      <%= f.label :email, "E-mail:" %>
      <%= f.email_field :email %><br>
      <%= f.label :address_l1, "Address Line 1" %>
      <%= f.text_field :address_l1 %><br>
      <%= f.label :address_l2, "Address Line 2" %>
      <%= f.text_field :address_l2 %><br>
      <%= f.label :city, "City" %>
      <%= f.text_field :city %><br>
      <%= f.label :state, "State" %>
      <%= render partial: 'state_dropdown', locals: { f: f } %><br>
      <%= f.submit "Create New User", class: 'button' %>
    <% end %>
  </section>
</body>