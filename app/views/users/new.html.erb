<h1>Your Journey Starts Here!</h1>

<%= form_with url: users_path, method: :post, local: true do |f| %>
  <%= f.hidden_field :protocol_id, value: 4 %>
  <%= f.hidden_field :password, value: "password" %>
  <%= f.hidden_field :ip_address, value: "192.199.248.75" %>

  <%= f.label :name, "Name:" %>
  <%= f.text_field :name %>

  <%= f.label :email, "Email:" %>
  <%= f.text_field :email %>

  <%= f.label :data_sharing, "I Elect to Share My Health Trend Data:" %>
  <%= f.select :data_sharing, ['True', 'False'] %>

  <%= f.submit "Begin My Journey" %>
<% end %>

<p>OR...</p>
<%= button_to "Log In with Google", '/users/auth/google_oauth2'  %>