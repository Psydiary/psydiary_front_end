<div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
      <div class="col-sm-6">
        <div class="card p-4">
          <h1 class="card-title text-center mb-4">Track Your Day</h1>
          <%= form_with url: user_microdose_log_entries_path(@facade.user_id), method: :post, class: "row g-3" do |f| %>
            <div class="col-md-12">
              <%= f.label :mood_before, "Mood Before:", class: "form-label" %>
              <%= f.text_field :mood_before, class: "form-control" %>
            </div>

            <div class="col-md-12">
              <%= f.label :mood_after, "Mood After:", class: "form-label" %>
              <%= f.text_field :mood_after, class: "form-control" %>
            </div>

            <div class="col-md-12">
              <%= f.label :environment, "Environment:", class: "form-label" %>
              <%= f.text_field :environment, class: "form-control" %>
            </div>

            <div class="col-md-12">
              <%= f.label :dosage, "Dosage (g):", class: "form-label" %>
              <%= f.text_field :dosage, value: '0.00', class: "form-control" %>
            </div>

            <div class="col-md-12">
              <%= f.label :intensity, "Intensity:", class: "form-label" %>
              <%= f.select :intensity, ['low', 'medium', 'high'], class: "form-control" %>
            </div>

            <div class="col-md-12">
              <%= f.label :sociability, "Sociability:", class: "form-label" %>
              <%= f.select :sociability, ['social', 'anxious', 'withdrawn'], class: "form-control" %>
            </div>

            <br>
            <br>

            <p>Enter a phrase to auto generate a related journal prompt:</p>
            <div class="col-md-12">
              <%= f.label :journal_prompt_keyword, "Journal Prompt Keyphrase", class: "form-label" %>
              <%= f.text_field :journal_prompt_keyword, class: "form-control" %>
            </div>

            #NEED TO INCLUDE HIDDEN FIELD HERE FOR THE JOURNAL PROMPT THAT IS GENERATED BY CHATGPT

            <div class="col-md-12">
              <%= f.label :journal_entry, "Journal Entry:", class: "form-label" %>
              <%= f.text_area :journal_entry, :cols => "65", :rows => "10" %>
            </div>

            <div class="col-md-12">
              <%= f.label :notes, "Other Notes:", class: "form-label" %>
              <%= f.text_area :notes, :cols => "65", :rows => "10" %>
            </div>

            <div class="col-md-12">
              <%= f.submit "Upload to the Universe", class: "btn btn-dark w-100 mb-3 text-white" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>