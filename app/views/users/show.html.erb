<div class ="container">
  <div class="mx-auto" style="width: 1000px;">
    <h1 class="text-center fw-bold display-1">Welcome Home, <%=@facade.user.first_name%></h1>

    <br>

    <h1 class="text-center">✨Track Something Amazing✨</h3>
    
    <br>

    <div class="row justify-content-center align-items-center">
      <div class="col-md-4 text-center">
        <button type="button" class="btn btn-dark btn-center btn-md" href=<%=new_user_daily_log_entry_path(@facade.user.id)%>>🌅 Track Your Day</button>
      </div>
    </div>

    <br>
   
   <div class="row justify-content-center align-items-center">
      <div class="col-md-4 text-center">
        <button type="button" class="btn btn-dark btn-center btn-md" href=<%=new_user_microdose_log_entry_path(@facade.user.id)%>>🍄 Track a Microdose</button>
      </div>
    </div>

    <div id="3-recent-entries" class="mx-auto" style="width: 600px;">
      <h1 class="text-center">✒️Here Are Your Recent Entries🖋</h3>

      <%n = 0%>
      <%@facade.recent_entries.each do |entry|%>
        <%if entry.class == DailyLogEntry%>
          <div id="entry-<%=n += 1%>">
          <h3>Daily Log Entry From: <%=entry.format_date%></h3>
          <p>Mood: <%=entry.mood%></p>
          <p>Sleep Score: <%=entry.sleep_score%></p>
          <p>Anxiety Score: <%=entry.anxiety_score%></p>
          <p>Depression Score: <%=entry.depression_score%></p>
          <p>Energy Levels: <%=entry.energy_levels%></p>
          <%=link_to "See More...", user_daily_log_entry_path(@facade.user.id, entry.id)%>
        <%else%>
          <div id="entry-<%=n += 1%>">
          <h3>Microdose Log Entry From: <%=entry.format_date%></h3>
          <p>Mood Before: <%=entry.mood_before%></p>
          <p>Mood After: <%=entry.mood_after%></p>
          <p>Environment: <%=entry.environment%></p>
          <p>Dosage: <%=entry.dosage%></p>
          <%=link_to "See More...", user_microdose_log_entry_path(@facade.user.id, entry.id)%>
        <%end%>
        <%end%>

    </div>

  </div>
</div>

    